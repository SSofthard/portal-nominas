<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="refused_expense_wizard" model="ir.ui.view">
        <field name="name">refused.expense.wizard</field>
        <field name="model">refused.expense.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason for Refuse Record">
               <sheet>
                <group>
                <group>
                    <field name="description"/>
                </group>
                </group>
               </sheet>
                <footer>
                    <button string="Refuse" name="save" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
