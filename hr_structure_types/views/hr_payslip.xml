<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="hr_payslip_inherit_form">
      <field name="name">hr payslip inherit for type form</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
      <field name="arch" type="xml">
            <xpath expr="//field[@name='contract_id']" position="after">
                <field name="structure_type_id" />
            </xpath>
            <xpath expr="//field[@name='struct_id']" position="attributes">
                <attribute name="domain">[('structure_type_id','=',structure_type_id)]</attribute>
                <attribute name="context">{'default_structure_type_id':structure_type_id}</attribute>
            </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="hr_payslip_mexico_inherit_form">
      <field name="name">hr payslip inherit for type form</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="payroll_mexico.view_hr_payslip_settlement_form"/>
      <field name="arch" type="xml">
            <xpath expr="//field[@name='contract_id']" position="after">
                <field name="structure_type_id" />
            </xpath>
            <xpath expr="//field[@name='struct_id']" position="attributes">
                <attribute name="domain">[('structure_type_id','=',structure_type_id),('settlement','=',True)]</attribute>
                <attribute name="context">{'default_structure_type_id':structure_type_id}</attribute>
            </xpath>
      </field>
    </record>
  </data>
</odoo>
