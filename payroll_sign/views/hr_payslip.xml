<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="view_hr_payslip_sign_form">
            <field name="name">hr.payslip.inherit.sign</field>
            <field name="model">hr.payslip</field>
            <field name="priority">6</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
				<xpath expr="//header" position="inside">
                    <button name="send_pdf_to_sign"
                        class="oe_stat_button"
                        string="Firmar nomina"
                        icon="fa-file"
                        type="object"
                        >
                    </button>
                </xpath>
				<xpath expr="//page[last()]" position="inside">
                    <group string="Firma del Recibo">
                      <field name="sign_request_id"/>
                      <field name="sign_status"/>
                        <button name="get_doc_completed_signed" type="object" icon="fa-download" string="Descargar Documento Firmado"></button>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
