<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
   	 <template id="assets__portal_login" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <!-- Personal CSS-->
            <link href="/theme_nice_black/static/src/css/animate.css" rel="stylesheet"/>
            <link href="/theme_nice_black/static/src/css/globalstyles.css" rel="stylesheet"/>
            <script src="/theme_nice_black/static/src/js/animations.js"></script>
        </xpath>
    </template>

<!-- Cambio de contraseña -->
<template id="theme_nice_black.reset_password" inherit_id="auth_signup.reset_password" name="Website Login Layout" priority="20">
    <xpath expr="//form[hasclass('oe_reset_password_form')]" position="replace">
        <div class="body_login">
            <form role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="card mx-auto mt-5 animated delay-1s fadeInDownBig" id="loginform">
                    <div class="card-body">
                        
                        <div class="text-center pb-3 border-bottom mb-4 animated delay-2s flipInY">
                            <img alt="Logo" class="img-fluid" src="/theme_nice_black/static/src/img/logo.png" />
                        </div>
                        
                        <form>
                            <t t-if="token and not invalid_token">
                                <t t-call="auth_signup.fields">
                                    <t t-set="only_passwords" t-value="1"/>
                                </t>
                            </t>

                            <t t-if="not token">
                                <div class="form-group field-login">
                                    <label for="login" class="col-form-label">Su correo electrónico</label>
                                    <input type="text" name="login" t-att-value="login" id="login" class="form-control"
                                        autofocus="autofocus" required="required" autocapitalize="off"/>
                                </div>
                            </t>

                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                            <input type="hidden" name="token" t-att-value="token"/>
                            <div class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                                <div class="d-flex justify-content-between align-items-center small">
                                    <button t-if=" not invalid_token" type="submit" class="btn btn-primary submit btn-block">Confirmar</button>
                                    <a t-if="not token" class="btn btn-primary submit btn-block"  t-attf-href="/web/login?{{ keep_query() }}">Inicio de sesión</a>
                                    <a t-if="invalid_token" class="btn btn-primary submit btn-block" href="/web/login">Inicio de sesión</a>
                                </div>
                                <div class="o_login_auth"/>
                            </div>
                        </form>
                        
                    </div>
                </div>
                
            </form>
        </div>
    </xpath>
</template>

<!-- Inicio de sesión -->
<template id="login" inherit_id="web.login" name="Website Login Layout" priority="20">
    <xpath expr="//form[hasclass('oe_login_form')]" position="replace">
            <div class="body_login">
                <form role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    
                    <div class="card mx-auto mt-5 animated delay-1s fadeInDownBig" id="loginform">
                        <div class="card-body">
                            <div class="text-center pb-3 border-bottom mb-4 animated delay-2s flipInY">
                                <img alt="Logo" class="img-fluid" src="/theme_nice_black/static/src/img/logo.png" />
                            </div>

                            <form>
                                <div class="form-group field-login">
                                    <input type="text" placeholder="Correo electrónico" name="login" t-att-value="login" id="login" required="required"
                                    autofocus="autofocus" autocapitalize="off"
                                    t-attf-class="form-control #{'form-control-sm' if form_small else ''}" 
                                    data-toggle="tooltip" data-placement="top"/>
                                </div>
                                
                                <div class="form-group field-password">
                                    <input type="password" placeholder="Contraseña" name="password" id="password" required="required" 
                                        t-attf-class="form-control #{'form-control-sm' if form_small else ''}" 
                                        autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"
                                        data-toggle="tooltip" data-placement="top"/>
                                </div>
                                
                                <p class="alert alert-danger" t-if="error" role="alert">
                                    <t t-esc="error"/>
                                </p>
                                <p class="alert alert-success" t-if="message" role="status">
                                    <t t-esc="message"/>
                                </p>
                                
                                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                                    <button type="submit" class="btn btn-primary submit btn-block">Entrar</button>
                                    <t t-if="debug">
                                        <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                                    </t>
                                    <div class="o_login_auth"/>
                                </div>

                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                
                            </form>
                        </div>
                    </div>
                </form>
            </div>

        
        
    </xpath>
</template>

</odoo>
