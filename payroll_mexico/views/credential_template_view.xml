<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="credential_template_form_view" model="ir.ui.view">
            <field name="name">credential.template.form</field>
            <field name="model">credential.template</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                         <div class="oe_title">
                            <label for="name"/>
                            <h5>
                                <field name="name" placeholder="e.j. Plantilla 01"/>
                            </h5>
                         </div>
                        <group>
                            <group string="Orientación y tamaño">
                                <field name="orientation"/>
                                <field name="size"/>
                            </group>
                        </group>
                         <field name="fields_credential_ids">
                                    <form unlink="False">
                                    <group string="Frontal o Reverso">
                                       <field name="sheet"/>
                                    </group>
                                    <group string="Campo">
                                        <field name="field_id" invisible="True" domain="[('model','in',['hr.employee','res.company','hr.contract', 'hr.group']),('ttype','not in',['one2many','many2many'])]"/>
                                        <field name="field_selection"/>
                                        <field name="image_size" attrs="{'invisible':[('field_type','!=', 'binary')], 'required':[('field_type','=', 'binary')]}"/>
                                        <field name="font_type" attrs="{'invisible':[('field_type','not in', ['char', 'integer', 'selection'])]}"/>
                                        <field name="align" invisible="False"/>
                                        <field name="vertical_align" invisible="False"/>
                                        <field name="field_type" invisible="True"/>
                                    </group>
                                    <group string="Posicion">
                                    <field name="position_x"/>
                                    <field name="position_y"/>

                                    <field name="node_id" invisible="False"/>
                                    </group>

                                    </form>
                                    <tree delete="false">
                                        <field name="field_id" invisible="True" domain="[('model','in',['hr.employee','res.company','hr.contract', 'hr.group']),('ttype','not in',['one2many','many2many'])]"/>
                                        <field name="sheet"/>
                                        <field name="field_selection"/>
<!--                                        <field name="position_x"/>-->
<!--                                        <field name="position_y"/>-->
<!--                                        <field name="node_id"/>-->
<!--                                        <field name="node_tag"/>-->
                                        <button name="unlink_element" type="object" class="oe_stat_button" icon="fa-trash"/>
                                    </tree>
                         </field>
                        <group string="Fondo">
                            <group>
                                    <div class="oe_inline">
                                        <field name="body_background_type" widget="radio"/>
                                    </div>
                            </group>
                            <group>
                                   <div class="oe_inline">
                                        <field name="back_background_type" widget="radio"/>
                                    </div>
                            </group>
                            <group>
                                    <div class="oe_inline" attrs="{'invisible':[('body_background_type','=','image')]}">
                                        <field name="background_color_body" widget="colorpicker"
                                               />
                                    </div>
                            </group>
                            <group>
                                   <div class="oe_inline" attrs="{'invisible':[('back_background_type','=','image')]}">
                                        <field name="background_color_back" widget="colorpicker"
                                               />
                                    </div>
                            </group>
                            <group>
                                    <div class="oe_inline" attrs="{'invisible':[('body_background_type','=','color')]}">
                                        <field name="background_image_body" class="oe_avatar oe_left"
                                        />
                                    </div>
                            </group>
                            <group>
                                   <div class="oe_inline" attrs="{'invisible':[('back_background_type','=','color')]}">
                                        <field name="background_image_back" class="oe_avatar oe_left"
                                        />
                                    </div>
                            </group>
                        </group>
                        <group>
                            <group>
                                    <div class="oe_inline">
                                        <label for="body_html"/>
                                        <field name="body_html" widget="htl" nolabel="True" readonly="True" force_save="1"/>
                                    </div>
                            </group>
                            <group>
                                   <div class="oe_inline">
                                        <label for="back_html"/>
                                        <field name="back_html" widget="html" nolabel="True" readonly="True" force_save="1"/>
                                    </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="credential_template_tree_view" model="ir.ui.view">
            <field name="name">credential.template.tree</field>
            <field name="model">credential.template</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

