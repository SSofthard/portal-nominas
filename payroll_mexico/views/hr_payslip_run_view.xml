<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_hr_payslip_run_mexico_form">
            <field name="name">view.hr.payslip.run.mexico.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="priority">6</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit_note']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group" position="after">
                    <group>
                        <group col="4">
                            <field name="subtotal_amount_untaxed"/>
                                     <button name="compute_amount_untaxed" type="object" class="oe_left oe_link">Cálcular impuesto de la nómina</button>
                            <field name="amount_tax"/>
                        </group>
                    </group>
                    <group col="4">
                        <field name="payroll_type"/>
                        <field name="payroll_month"/>
                        <field name="payroll_of_month"/>
                        <field name="payroll_period"/>
                        <field name="table_id" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
