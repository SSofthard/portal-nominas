<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        
        <record id="view_hr_perceptions_form" model="ir.ui.view">
            <field name="name">hr.perceptions.form</field>
            <field name="model">hr.perceptions</field>
            <field name="arch" type="xml">
                <form string="Perceptions">
                      <header>
                        <button string="Approve" name="button_approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button string="Paid" name="button_paid" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('draft','paid'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve,paid"/>
                      </header>
                      <sheet>
                          <group>
                              <group>
                                  <field name="employee_id"/>
                                  <field name="perception_import" widget="mask" data-inputmask="'alias': 'decimal','digits':'2', 'greedy' : false"/>
                                  <field name="perception_type" invisible="1"/>
                                  <field name="group_id" invisible="1"/>
                              </group>
                              <group>
                                  <field name="type_id" domain="[('perception_type','=',context.get('type'))]"/>
                              </group>
                          </group>
                      </sheet>
                </form>
             </field>
        </record>
        
        <record id="view_hr_perceptions_tree" model="ir.ui.view">
            <field name="name">hr.perceptions.tree</field>
            <field name="model">hr.perceptions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="type_id"/>
                    <field name="perception_import"/>
                    <field name="group_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_perceptions_filter" model="ir.ui.view">
            <field name="name">hr.perceptions.filter</field>
            <field name="model">hr.perceptions</field>
            <field name="arch" type="xml">
                <search >
                    <group expand="0" string="Group By">
                        <filter name="group_by_type_perceptions" string="Type" context="{'group_by':'type_id'}"/>
                        <filter name="group_by_type_perceptions" string="Group" context="{'group_by':'group_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="view_hr_perceptions_pivot" model="ir.ui.view">
            <field name="name">hr.perceptions.pivot</field>
            <field name="model">hr.perceptions</field>
            <field name="arch" type="xml">
                <pivot string="Perceptions or Deductions">
                    <field name="employee_id" type="col"/>
                    <field name="perception_import" type="col"/>
                    <field name="type_id" type="row"/>
                </pivot>
            </field>
        </record>
    
        <record id="view_hr_perceptions_action19" model="ir.actions.act_window">
            <field name="name">Perceptions</field>
            <field name="res_model">hr.perceptions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="domain">[('perception_type', '=', 'perception')]</field>
            <field name="context">{'type': 'perception'}</field>
        </record>
        
        <record id="view_hr_deductions_action" model="ir.actions.act_window">
            <field name="name">Deductions</field>
            <field name="res_model">hr.perceptions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="domain">[('perception_type', '=', 'deductions')]</field>
            <field name="context">{'type': 'deductions'}</field>
        </record>
        
        <record id="view_hr_type_perceptions_action" model="ir.actions.act_window">
            <field name="name">Type Perceptions</field>
            <field name="res_model">hr.type.perceptions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            
        </record>
    
        <menuitem
            name="Perceptions and Deductions"
            id="menu_hr_perceptions"
            parent="hr_payroll.menu_hr_payroll_root" sequence="10"/>
        
        <menuitem
            name="Perceptions"
            id="menu_hr_perception"
            action="view_hr_perceptions_action19"
            parent="menu_hr_perceptions" sequence="20"/>
        
        <menuitem
            name="Deductions"
            id="menu_hr_deductions"
            action="view_hr_deductions_action"
            parent="menu_hr_perceptions" sequence="30"/>
            
        <menuitem
            name="Report"
            id="menu_hr_perception_report"
            action="action_hr_perception_report"
            parent="menu_hr_perceptions" sequence="40"/>
            
        <menuitem
            name="Type of Perceptions and Deductions"
            id="menu_hr_type_perceptions"
            action="view_hr_type_perceptions_action"
            parent="hr_payroll.menu_hr_payroll_configuration" sequence="60"/>
            
        <record id="view_hr_type_perceptions_form" model="ir.ui.view">
            <field name="name">hr.type.perceptions.form</field>
            <field name="model">hr.type.perceptions</field>
            <field name="arch" type="xml">
                <form string="Type Perceptions">
                      <sheet>
                          <group>
                              <group>
                                  <field name="perception_type"/>
                                  <field name="prefix"/>
                              </group>
                              <group>
                                  <field name="code"/>
                                  <field name="name"/>
                              </group>
                          </group>
                      </sheet>
                </form>
             </field>
        </record>           
            
        <record id="view_hr_type_perceptions_tree" model="ir.ui.view">
            <field name="name">hr.type.perceptions.tree</field>
            <field name="model">hr.type.perceptions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="perception_type"/>
                </tree>
            </field>
        </record>
            
            
        <record id="view_hr_type_perceptions_filter" model="ir.ui.view">
            <field name="name">hr.type.perceptions.filter</field>
            <field name="model">hr.type.perceptions</field>
            <field name="arch" type="xml">
                <search >
                    <field name="code"/>
                    <field name="name"/>
                    <filter string="Perceptions" name="perceptions"
                        domain="[('perception_type', '=', 'perception')]"/>
                    <filter string="Deductions" name="deductions"
                        domain="[('perception_type', '=', 'deductions')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_type_perceptions" string="Perceptions or Deductions" context="{'group_by':'perception_type'}"/>
                    </group>
                </search>
            </field>
        </record>
    
    </data>
</odoo>
