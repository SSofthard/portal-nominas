                <field name="mobile" widget="phone"/>
                <button
                    type="action"
                    name="%(sms.send_sms_form_action)d"
                    class="btn-sm btn-link mb4 fa fa-envelope-o"
                    aria-label="Send SMS"
                    title="Send SMS"
                    attrs="{'invisible':[('mobile', '=', False)]}"
                    context="{'field_name': 'mobile'}"
                    />
                </div>
            </xpath>
-->
