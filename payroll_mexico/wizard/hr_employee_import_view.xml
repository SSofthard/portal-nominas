<?xml version="1.0" encoding="utf-8"?>
<odoo>
        
        <!--wizard to employee import-->
        <record id="view_employee_import_form" model="ir.ui.view">
            <field name="name">view.employee.import.form</field>
            <field name="model">hr.employee.import</field>
            <field name="arch" type="xml">
            <form string="Importar Empleados">
                <group>
                    <field name="file_ids" widget="many2many_binary"/>
                    <field name="file_name" readonly="1"/>
                </group>
                <div>
                    <h2>Cargar layout de empleados</h2>
                    <p></p> 
                    <p>
                        <ul>
                            <li>Importante. Completar los campos requeridos.</li>
                        </ul>
                    </p>
                    <p>Por favor proceda a subir el layout.</p>
                </div>
                <footer>
                    <button name="import_data" string="Cargar empleados" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancelar" class="btn-default"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_employee_import_form" model="ir.actions.act_window">
            <field name="name">Importar Empleados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

<!--
        <menuitem
            id="hr_employee_import"
            name="Importar Empleados"
            parent="hr.menu_hr_payroll_root"
            sequence="15"/>
-->

        <menuitem
            id="menu_open_employee_import"
            name="Importar empleados"
            parent="hr.menu_hr_root"
            action="action_employee_import_form"
            sequence="20"/>
</odoo>
