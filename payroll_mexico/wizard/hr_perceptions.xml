<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="view_hr_perceptions_wizard" model="ir.ui.view">
            <field name="name">view.hr.perceptions.wizard</field>
            <field name="model">hr.perceptions.wizard</field>
            <field name="priority">5</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="group_id"/>
                        <field name="perception_type" widget="radio"/>
                    </group>
                    <group>
                        <field name="all_or_only" widget="radio"/>
                        <field name="type_id" attrs="{'invisible': [('all_or_only', '!=', 'only')]}"/>
                    </group>
                <footer>
                    <button name="report_print" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer> 
               </form>
            </field>
        </record>
        
        <act_window
            id="action_hr_perception_report"
            name="Report of perceptions or deductions"
            res_model="hr.perceptions.wizard"
            src_model="hr.perceptions"
            view_mode="form"
            target="new"
           />


</odoo>
