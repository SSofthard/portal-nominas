<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_payslip_run_excel_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.excel.form</field>
            <field name="model">hr.payslip.run.excel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Exportar Reporte de Nómina Excel" version="7.0">
                <h3> ¿Seguro que quieres exportar en Excel? </h3>
                <footer>
                    <button string="Generar Excel" name="export_excel" type="object" class="oe_highlight"/>
                       or
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>
        
        <record id="view_hr_payslip_run_export_excel" model="ir.ui.view">
            <field name="name">Reporte de Nómina Excel</field>
            <field name="model">hr.payslip.run.export.excel</field>
            <field name="arch" type="xml">
                <form string="Descargar Reporte de Nómina Excel">
                    <div class="alert alert-info text-center" role="alert" style="margin-bottom:0px;">
                        Se generado el Reporte Excel correctamente, proceda a descargarlo.
                    </div>
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Cerrar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
