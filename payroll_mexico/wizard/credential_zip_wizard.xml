<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_hr_credential_zip_wizard" model="ir.ui.view">
            <field name="name">Descargar txt de liquidación</field>
            <field name="model">hr.credential.zip.wizard</field>
            <field name="arch" type="xml">
                <form string="Descargar TXT liquicación">
                    <div class="alert alert-info text-center" role="alert" style="margin-bottom:0px;">
                        Se generado el zip correctamente, proceda a descargarlo.
                    </div>
                    <group>
                        <field name="zip_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Cerrar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_hr_credential_zip_wizard" model="ir.actions.act_window">
            <field name="name">Exportar ZIP de credenciales</field>
            <field name="view_id" ref="view_fees_settlement_report_txt"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="res_model">hr.credential.zip.wizard</field>
            <field name="target">new</field>
        </record>

            
   </data>
</openerp>
