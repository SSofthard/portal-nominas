<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_payroll_run_details_wizard" model="ir.ui.view">
        <field name="name">Detalles de la Nómina</field>
        <field name="model">payroll.run.details.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar reporte de detalles de la Nómina">
                <group>
                    <group>
                         <field name="estructure_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="employer_register_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Generar" name="print_report" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cerrar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <act_window
        id="action_wizard_payroll_run_details"
        name="Generate payroll details"
        res_model="payroll.run.details.wizard"
        view_mode="form"
        multi="True"
        target="new"
       />

</odoo>
