<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_sumary_report_view" model="ir.ui.view">
        <field name="name">wizard.sumary.report.view</field>
        <field name="model">hr.wizard.sumary.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="payslip_run_id" options='{"no_open": True, "no_create": True}'/>
                    </group>
                    <group>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="company_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>
                    </group>
                    <group>
                        <label for="wage" string="Contracting Regime"/>
                        <div>
                            <div class="o_row">
                                <field name="wage"/> <label for="wage"/>
                            </div>
                            <div class="o_row">
                               <field name="assimilated"/> <label for="assimilated"/>
                            </div>
                            <div class="o_row">
                               <field name="free"/> <label for="free"/>
                            </div>
                        </div>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" name="report_print" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
    
    <record id="action_wizard_sumary_report" model="ir.actions.act_window">
        <field name="name">Sumary Report</field>
        <field name="res_model">hr.wizard.sumary.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
