<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
     
        <report id="report_hr_perceptions_wizard" 
          string="Report of perceptions or deductions" 
          model="hr.perceptions.wizard" 
          report_type="qweb-pdf" 
          name="payroll_mexico.template_hr_perceptions_wizard" 
         /> 
        
        <template id="template_hr_perceptions_wizard">
            <t t-call="web.html_container">
                <t t-call="payroll_mexico.internal_layout_contract">
                    <table class="table table-condensed" t-if="data['all_or_only'] == 'only'">
                        <thead >
                            <strong><center><p t-if="data['perception_type'] == 'perception'"> Perception: <t t-esc="data['type_id']"/></p></center></strong>
                            <strong><center><p t-if="data['perception_type'] == 'deductions'"> Deductions: <t t-esc="data['type_id']"/></p></center></strong>
                        </thead>
                        <tbody>
                            <div class="col-xs-4 pull-left">
                                <strong>Group: </strong><span><t t-esc="data['group']"/></span>
                            </div>
                        </tbody>
                    </table>
                </t>
            </t>
        </template>
    </data>
</odoo>
