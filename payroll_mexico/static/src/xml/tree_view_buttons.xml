<templates>

    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_discard" t-operation="after">
            <t t-if = "widget.modelName == 'hr.employee'">
                <button name="list_import_employee"
                    class="btn btn-sm btn-default oe_highlight import_employee_tree_view_button"
                    type="button" model="hr.employee">Importar Empleados</button>
            </t>
        </t>
    </t>

    <t t-name="ImportEmployeeView.import_button">
        <button t-if = "widget.modelName == 'hr.employee'" type="button" class="btn btn-sm btn-default oe_highlight import_employee_kanban_view_button">
            Importar Empleados
        </button>
    </t>

