<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

    <!--Rules de multi company -->
    <delete model="ir.rule" id="hr.hr_dept_comp_rule"/>
    <delete model="ir.rule" id="hr.hr_job_comp_rule"/>
    <delete model="ir.rule" id="hr.hr_employee_comp_rule"/>
    <delete model="ir.rule" id="hr_holidays.hr_holidays_status_rule_multi_company"/>
    <delete model="ir.rule" id="hr_holidays.hr_leave_rule_multicompany"/>
    <delete model="ir.rule" id="hr_expense.hr_expense_comp_rule"/>
    <delete model="ir.rule" id="hr_expense.hr_expense_report_comp_rule"/>
    <delete model="ir.rule" id="base.res_currency_rate_rule"/>
    <delete model="ir.rule" id="base.property_rule"/>
    <delete model="ir.rule" id="analytic.analytic_line_comp_rule"/>
    <delete model="ir.rule" id="analytic.analytic_tag_comp_rule"/>
    <delete model="ir.rule" id="analytic.analytic_group_comp_rule"/>
    <delete model="ir.rule" id="analytic.analytic_comp_rule"/>
    <delete model="ir.rule" id="account.tax_comp_rule"/>
    <delete model="ir.rule" id="account.invoice_analysis_comp_rule"/>
    <delete model="ir.rule" id="account.invoice_comp_rule"/>
    <delete model="ir.rule" id="account.journal_comp_rule"/>
    <delete model="ir.rule" id="account.account_comp_rule"/>
    <delete model="ir.rule" id="documents.documents_folder_company_rule"/>
    <delete model="ir.rule" id="base.res_company_rule_employee"/>
    
    <record model="ir.module.category" id="module_category_hr_payroll_inputs_groups">
		<field name="name">Inputs (Groups/Company)</field>
		<field name="description">Groups for Inputs management by groups or companies.</field>
		<field name="sequence">10</field>
	</record>
    <record id="group_hr_payroll_inputs_creation_groups" model="res.groups">
        <field name="name">Creations</field>
        <field name="category_id" ref="module_category_hr_payroll_inputs_groups"/>
    </record>
    <record id="group_hr_payroll_inputs_user_groups" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_hr_payroll_inputs_groups"/>
        <field name="implied_ids" eval="[(4, ref('payroll_mexico.group_hr_payroll_inputs_creation_groups'))]"/>
    </record>

    <record id="group_hr_payroll_inputs_manager_groups" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hr_payroll_inputs_groups"/>
        <field name="implied_ids" eval="[(4, ref('payroll_mexico.group_hr_payroll_inputs_user_groups'))]"/>
    </record>
    
    <record id="hr_employee_per_group_inputs_creation" model="ir.rule">
        <field name="name">Employees filtered by group (Inputs)</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('group_id','=',user.group_id.id)]</field>
        <field name="groups" eval="[(4,ref('group_hr_payroll_inputs_creation_groups'))]"/>
    </record>
    
    <record id="hr_inputs_rule_groups" model="ir.rule">
        <field name="name">Inputs: read all</field>
        <field name="model_id" ref="model_hr_inputs"/>
        <field name="domain_force">[('group_id','in',[user.group_id.id,False])]</field>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('group_hr_payroll_inputs_creation_groups'))]"/>
    </record>
    
    </data>
</odoo>
