<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record model="ir.module.category" id="module_category_hr_holidays_groups">
		<field name="name">Leaves (Groups/Company)</field>
		<field name="description">Groups for incident management by groups or companies.</field>
		<field name="sequence">10</field>
	</record>
    <record id="group_hr_holidays_creation_groups" model="res.groups">
        <field name="name">Creations</field>
        <field name="category_id" ref="module_category_hr_holidays_groups"/>
    </record>
    <record id="group_hr_holidays_user_groups" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_hr_holidays_groups"/>
        <field name="implied_ids" eval="[(4, ref('hr_incidents.group_hr_holidays_creation_groups'))]"/>
    </record>

    <record id="group_hr_holidays_manager_groups" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hr_holidays_groups"/>
        <field name="implied_ids" eval="[(4, ref('hr_incidents.group_hr_holidays_user_groups'))]"/>
    </record>
    
    <record id="hr_employee_per_group_creation" model="ir.rule">
        <field name="name">Employees filtered by group</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('group_id','=',user.group_id.id)]</field>
        <field name="groups" eval="[(4,ref('group_hr_holidays_creation_groups'))]"/>
    </record>

	<record id="hr_holidays.hr_leave_rule_employee_update" model="ir.rule">
        <field name="name">Leaves: employee: create/write/unlink not validated own</field>
        <field name="model_id" ref="model_hr_leave"/>
        <field name="domain_force">['|','|',('group_id','=',user.group_id.id),('employee_id.user_id','=',user.id), ('state', 'in', ['draft', 'confirm', 'cancel', 'refuse','validate1','validate'])]</field>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

	<record id="hr_holidays.hr_leave_rule_employee" model="ir.rule">
        <field name="name">Leaves: employee: read all</field>
        <field name="model_id" ref="model_hr_leave"/>
        <field name="domain_force">['|',('group_id','in',[user.group_id.id,False]),('employee_id.user_id','=',user.id)]</field>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user')),(4,ref('group_hr_holidays_creation_groups'))]"/>
    </record>
    
    <record id="hr_holidays.hr_leave_allocation_rule_manager" model="ir.rule">
        <field name="name">Allocations: manager external: no limit</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave_allocation"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_manager')),(4, ref('group_hr_holidays_manager_groups'))]"/>
    </record>
    
    <record id="hr_holidays.resource_leaves_officer" model="ir.rule">
        <field name="name">Leaves Resources Officer</field>
        <field name="model_id" ref="resource.model_resource_calendar_leaves"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user')),(4,ref('group_hr_holidays_user_groups'))]"/>
    </record>

</odoo>
