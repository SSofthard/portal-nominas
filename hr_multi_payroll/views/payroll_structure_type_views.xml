<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      
    <record model="ir.ui.view" id="hr_payroll_structure_types_form">
        <field name="name">hr_payroll_structure_types form</field>
        <field name="model">hr.payroll.structure.types</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Structure Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <field 
                            name="company_id" 
                            groups="base.group_multi_company" 
                            options="{'no_create': True}"/>
                    </group>
                    <field name="structure_ids"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="hr_payroll_structure_types_tree">
      <field name="name">hr_payroll_structure_types_tree</field>
      <field name="model">hr.payroll.structure.types</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="hr_payroll_structure_types_action_window">
      <field name="name">Structure Types</field>
      <field name="res_model">hr.payroll.structure.types</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        name="Structure Type" 
        id="hr_payroll_structure_types_menu" 
        parent="hr_payroll.menu_hr_payroll_configuration"
        action="hr_payroll_structure_types_action_window"
        sequence="1"/>
    
    <record model="ir.ui.view" id="hr_payroll_structure_inherit_form">
        <field name="name">hr payroll structure inherit for type form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="before">
                <field name="structure_type_id" required="1"/>
            </xpath>
        </field>
    </record>
    
  </data>
</odoo>
