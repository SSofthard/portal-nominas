<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hr_employee_document_type_form" model="ir.ui.view">
            <field name="name">hr.employee.document.type.form</field>
            <field name="model">hr.employee.document.type</field>
            <field name="arch" type="xml">
                <form string="Document type">
                    <group >
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_hr_employee_document_type_tree" model="ir.ui.view">
            <field name="name">hr.employee.document.type.tree</field>
            <field name="model">hr.employee.document.type</field>
            <field name="arch" type="xml">
                <tree string="Group">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_hr_employee_document_type" model="ir.actions.act_window">
            <field name="name">Document type</field>
            <field name="res_model">hr.employee.document.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p>
                Let's create a Document Type.
              </p>
            </field>
        </record>
        <menuitem
            id="menu_hr_employee_document_typeconfiguration"
            name="Document Type"
            action="action_hr_employee_document_type"
            parent="hr.menu_human_resources_configuration"
            groups="hr.group_hr_manager"
            sequence="115"/>
    
    
    <record model="ir.cron" id="employee_record_document_expired_cron">
        <field name="name">Employee Document Expiration</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_hr_employee_document"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
    </record>

    <record model="ir.ui.view" id="employee_document_form_view">
        <field name="name">hr.employee.document.form</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="type_id"/>
                            <field name="doc_attachment_id" widget="many2many_binary" class="oe_inline"/>
                            <field name="employee_ref" invisible="1"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="employee_document_tree_view">
        <field name="name">hr.employee.document.tree</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>

    <record id="employee_document_view_search" model="ir.ui.view">
        <field name="name">hr.employee.document.tree</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <search string="Search Employee Documents">
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_document_inherit_form_view">
        <field name="name">hr.employee.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
    <record model="ir.ui.view" id="hr_contract_document_inherit_form_view">
        <field name="name">hr.contract.form.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
