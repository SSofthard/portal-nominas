<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_reminder_unattended_request" model="ir.cron">
        <field name="name">Reminder of unattended request.</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="state">code</field>
        <field name="code">env['helpdesk.ticket'].send_reminder_email_cron()</field>
        <field name='interval_number'>5</field>
        <field name='interval_type'>hours</field>
        <field name="numbercall">-1</field>
    </record>
    
    <record id="mail_notification_escalation_requests_services_attended" model="ir.cron">
        <field name="name">Notification of escalation of requests for services not attended.</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="state">code</field>
        <field name="code">env['helpdesk.ticket'].send_escalation_notification_mail()</field>
        <field name='interval_number'>5</field>
        <field name='interval_type'>hours</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
