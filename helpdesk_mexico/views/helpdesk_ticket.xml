<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="helpdesk_ticket_view_form_inherit_mexico" model="ir.ui.view">
            <field name="name">helpdesk.ticket.form.inherit.mexico</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
		    <field name="group_id"/>
                </xpath>
            </field>
        </record>      
	  
        <record id="helpdesk_stage_view_form_inherit_mexico" model="ir.ui.view">
            <field name="name">helpdesk.stage.form.inherit.mexico</field>
            <field name="model">helpdesk.stage</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='template_id']" position="after">
		    <field name="ticket_type_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>        
    </data>
</odoo>
